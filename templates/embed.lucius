article {
  .comment-indicator {
    cursor: pointer;
    position: absolute;
    right: -30px;
    opacity: 0;
    padding: 0;
    height: 24px;
    width: 20px;
    z-index: 9998;

    svg {
      position: absolute;
      top: 0;
      left: 0;
      z-index: 0;

      path {
        fill: #dfdfdd;
        transition: fill .2s ease-in-out;
      }
    }

    .count {
      color: #fff;
      display: block;
      font-size: 11px;
      height: 24px;
      line-height: 20px;
      text-align: center;
      width: 20px;
      z-index: 2;
      position: absolute;
      top: 0;
      left: 0;
    }
  }

  .comment-indicator:hover,
  .comment-indicator.commenting {
    svg path {
      transition: fill .2s ease-in-out;
      fill: #ad141e;
    }
  }

  ol.comments, .comment-form {
    display: none;
    z-index: 9999;
  }
}

article.commenting {
  .comment-indicator {
    width: 180px;
  }

  ol.comments {
    display: block;
    position: absolute;
    right: -35px;
    width: 150px;

    li {
      border-top: 1px solid #f2f2f0;
      box-sizing: border-box;
      list-style-type: none;
      font-size: 14px;
      margin: 0;
      padding-bottom: 20px;
      padding-top: 20px;

      p {
        font-size: 14px;
        padding: 0;
        margin: 0;
      }

      .author {
        font-weight: bold;
        font-size: 14px;

        img {
          -moz-border-radius: 100%;
          -webkit-border-radius: 100%;
          border-radius: 100%;
          float: left;
          height: 32px;
          width: 32px;
          margin-top: 0px;
        }

        span {
          display: inline-block;
          margin-left: 10px;
        }
      }

      .body {
        margin-left: 42px;
      }
    }

    .comment-form {
      display: block;

      a {
        cursor: pointer;
        font-size: 14px;
      }

      a.create {
        margin-left: 40px;
      }

      a.cancel {
        color: #aaa;
        float: right;
        font-size: 11px;
        margin-left: 10px;
      }

      form {
        display: none;
        float: right;
        width: 150px;

        textarea {
          -moz-appearance: none;
          -webkit-appearance: none;
          -webkit-box-shadow: none;
          appearance: none;
          border-radius: 0;
          border: 0;
          display: block;
          font-size: 14px;
          height: 50px;
          outline-offset: 0;
          outline: none;
          overflow: hidden;
          padding: 0;
          resize: none;
          width: 100%;
        }

        input[type=submit] {
          display: inline-block;
          font-size: 14px;
          padding: .5em .8em;
          margin-left: 42px;
          margin-top: 10px;
        }
      }
    }
  }
}

@media only screen
and (min-device-width : 320px)
and (max-device-width : 480px) {
  article {
    .comment-indicator {
      display: none;
    }
  }

  article.commenting {
    .comment-indicator {
      display: none;
    }
  }
}
