@linkcolor: #E74C3D;
@linkbordercolor: #F7C4BF;
@lightgray: #D7D7D7;
@mediumgray: #615E5F;
@darkgray: #221E1F;

.hero {
  text-align: center;
}

.hero-disclaimer {
  color: #{mediumgray};
  margin-bottom: 5em;
}

.hero-headline {
  font-size: 3em;
  font-weight: normal;
  margin-left: auto;
  margin-right: auto;
  max-width: 15em;
}

.hero-image {
  margin: 4em 0 -1em;
  position: relative;
  z-index: 0;
}
